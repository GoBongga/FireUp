<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bambazu.fireup.OfferDetail"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_offer_icon"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:maxHeight="200dp"
                android:layout_gravity="top|center_horizontal"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/regular_space"
                android:paddingRight="@dimen/regular_space">

                <TextView
                    android:id="@+id/detail_offer_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="22sp"
                    android:textColor="@color/color_description"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/detail_offer_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/description_dialog_text"/>

                <TextView
                    android:id="@+id/detail_offer_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:id="@+id/go_place_offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/go_place_offer"
                    android:background="@android:color/transparent"
                    android:textColor="@color/btn_search"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.1">
        <Button
            android:id="@+id/claim_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/claim_offer"
            android:background="@color/color_btn_show_services"
            android:textColor="@color/color_btn_book_place"/>
    </LinearLayout>
</LinearLayout>

