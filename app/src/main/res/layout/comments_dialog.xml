<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_dialog_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment_dialog_title"
        android:textSize="20dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/dialog_box_text_color"/>

    <EditText
        android:id="@+id/place_comment_box"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="@string/comment_dialog_desc"
        android:background="@color/dialog_box_bg"
        android:padding="5dp">

        <requestFocus />

    </EditText>

</LinearLayout>